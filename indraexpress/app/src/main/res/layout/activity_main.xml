<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:paddingHorizontal="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        // HEADER - NAMA APLIKASI

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Indra's Express"
            android:textColor="#000"
            android:textSize="25dp" />

        // LIST VIEW - DAFTAR NAMA

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="NAMA"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/list_all_name"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20dp" />

        // SPINNER - KATEGORI PROVINSI

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="PROVINSI"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/category_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        // AUTO COMPLETE - NAMA KOTA

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="KOTA"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/new_autocompletetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Nama Kota" />
    </LinearLayout>


</ScrollView>